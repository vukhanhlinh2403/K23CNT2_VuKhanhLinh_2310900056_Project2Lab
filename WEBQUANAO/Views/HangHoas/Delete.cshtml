@model WEBQUANAO.Models.HangHoa

@{
    ViewData["Title"] = "Xóa hàng hóa";
}

<h1 class="text-center text-danger mb-4">Xác nhận xóa</h1>

<div class="alert alert-warning shadow">
    <h5>Bạn có chắc muốn xóa <strong>@Model.TenHh</strong> không?</h5>
</div>

<div class="card p-4 shadow">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Tên hàng</dt>
        <dd class="col-sm-9">@Model.TenHh</dd>

        <dt class="col-sm-3 fw-bold">Giá</dt>
        <dd class="col-sm-9">@string.Format("{0:N0} đ", Model.DonGia)</dd>

        <dt class="col-sm-3 fw-bold">Ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <img src="~/Hinh/HangHoa/@Model.Hinh" class="img-thumbnail" style="max-height:100px;" />
            }
            else
            {
                <span class="text-muted">Chưa có ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaHh" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
