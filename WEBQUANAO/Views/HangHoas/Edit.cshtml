@model WEBQUANAO.Models.HangHoa

@{
    ViewData["Title"] = "Chỉnh sửa hàng hóa";
}

<h1 class="text-center text-warning mb-4">Chỉnh Sửa Hàng Hóa</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="MaHh" />

        <div class="mb-3">
            <label asp-for="TenHh" class="form-label fw-bold"></label>
            <input asp-for="TenHh" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="TenAlias" class="form-label fw-bold"></label>
            <input asp-for="TenAlias" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MaLoai" class="form-label fw-bold"></label>
            <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai"></select>
        </div>

        <div class="mb-3">
            <label asp-for="MoTaDonVi" class="form-label fw-bold"></label>
            <input asp-for="MoTaDonVi" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DonGia" class="form-label fw-bold"></label>
            <input asp-for="DonGia" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Hinh" class="form-label fw-bold"></label>
            <input asp-for="Hinh" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NgaySx" class="form-label fw-bold"></label>
            <input asp-for="NgaySx" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="GiamGia" class="form-label fw-bold"></label>
            <input asp-for="GiamGia" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SoLanXem" class="form-label fw-bold"></label>
            <input asp-for="SoLanXem" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MoTa" class="form-label fw-bold"></label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="MaNcc" class="form-label fw-bold"></label>
            <input asp-for="MaNcc" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
