@model TRANGQUANAO.Models.HangHoa

@{
    ViewData["Title"] = "Xóa Hàng Hóa";
}

<h1 class="text-center my-4 text-danger">
    <i class="bi bi-trash"></i> Xóa Hàng Hóa
</h1>

<div class="alert alert-warning shadow p-4">
    <h5>Bạn có chắc chắn muốn xóa <strong>@Model.TenHh</strong> không?</h5>
    <p class="text-muted">Hành động này không thể hoàn tác.</p>

    <dl class="row">
        <dt class="col-sm-3">Đơn giá</dt>
        <dd class="col-sm-9">@string.Format("{0:N0} đ", Model.DonGia)</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.MoTa</dd>

        <dt class="col-sm-3">Hình</dt>
        <dd class="col-sm-9">
            <img src="~/Hinh/HangHoa/@Model.Hinh" style="width:80px;height:80px;object-fit:cover;" class="img-thumbnail" />
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="MaHh" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xóa
            </button>
        </div>
    </form>
</div>
