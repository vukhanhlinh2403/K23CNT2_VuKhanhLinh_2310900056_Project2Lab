@model X.PagedList.IPagedList<TRANGQUANAO.Models.HangHoa>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Danh sách Hàng Hóa";
}

<h1 class="text-center my-4 text-primary fw-bold">
    <i class="bi bi-bag-check"></i> Danh sách Hàng Hóa
</h1>

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm mới
    </a>

    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="searchString" class="form-control me-2"
               value="@ViewBag.SearchString" placeholder="Tìm tên hàng..." />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Tìm
        </button>
    </form>
</div>

<div class="table-responsive shadow rounded">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>Tên hàng</th>
                <th>Tên Alias</th>
                <th>Mô tả ĐV</th>
                <th>Đơn giá</th>
                <th>Hình</th>
                <th>Ngày SX</th>
                <th>Giảm giá</th>
                <th>Số lần xem</th>
                <th>Mô tả</th>
                <th>Nhà CC</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenHh</td>
                    <td>@item.TenAlias</td>
                    <td>@item.MoTaDonVi</td>
                    <td>@string.Format("{0:N0} đ", item.DonGia)</td>
                    <td>
                        <img src="~/Hinh/HangHoa/@item.Hinh" alt="@item.TenHh"
                             class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                    </td>
                    <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>
                    <td>@item.GiamGia %</td>
                    <td>@item.SoLanXem</td>
                    <td>@item.MoTa</td>
                    <td>@item.MaNcc</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.SearchString }))
</div>
